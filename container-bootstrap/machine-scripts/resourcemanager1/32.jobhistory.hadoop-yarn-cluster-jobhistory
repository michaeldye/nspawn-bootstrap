#!/bin/bash -e

SOURCE=$(realpath $(dirname $0))

source $SOURCE/scripts-include-pkg

HOST=$1; shift
DOMAIN=$1; shift

echo "Executing setup of hadoop resourcemanager $HOST.$DOMAIN"

source ~admin/.bash_profile

svc_name=hadoop-historyserver

cp $SOURCE/fs/etc/systemd/system/$svc_name.service /etc/systemd/system/

if [ ! -e "/etc/systemd/system/multi-user.target.wants/$svc_name.service" ]; then
  ln -s /etc/systemd/system/$svc_name.service /etc/systemd/system/multi-user.target.wants/
fi

exit 0
