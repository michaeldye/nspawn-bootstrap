#!/bin/bash -e

HOST=$1; shift
DOMAIN=$1; shift
_=$1; shift
COMMON_DIR=$1; shift

source $COMMON_DIR/scripts-include-pkg || exit 6

FQDN="$HOST.$DOMAIN"

echo "Installing additional tools on $FQDN"

apt-get update && apt-get install -y vim net-tools sudo dnsutils iproute2 nmap tcpdump iputils-ping less rsync

sed -i 's,%admin.*,%admin ALL=(ALL) NOPASSWD: ALL,' /etc/sudoers

sed -i 's,10.109.39.196:8080/archive.ubuntu.com,mirrors.xmission.com,' /etc/apt/sources.list
