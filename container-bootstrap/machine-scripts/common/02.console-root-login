#!/bin/bash -e

HOST=$1; shift
DOMAIN=$1; shift
_=$1; shift
COMMON_DIR=$1; shift

source $COMMON_DIR/scripts-include-pkg || exit 6

FQDN="$HOST.$DOMAIN"

echo "Enabling root login from console pts/0 on $FQDN"

passwd -u root

for i in {0..9}; do
  echo -e "\nnspawn console\npts/$i" >> /etc/securetty
done

